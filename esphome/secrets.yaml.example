# ESPHome Secrets File
# Copy this to secrets.yaml and fill in your actual values
# NEVER commit secrets.yaml to version control!

# WiFi credentials
wifi_ssid: "YourWiFiName"
wifi_password: "YourWiFiPassword"

# Fallback AP credentials (when WiFi fails)
fallback_password: "SetAStrongPasswordHere"

# Home Assistant API encryption key
# Generate with: openssl rand -base64 32
api_encryption_key: "YOUR_32_BYTE_BASE64_KEY_HERE=="

# OTA (Over-The-Air) update password
ota_password: "SetAnotherStrongPasswordHere"

# Example filled out:
# wifi_ssid: "MyHomeNetwork"
# wifi_password: "super_secret_wifi_pass"
# fallback_password: "ConfigMode123"
# api_encryption_key: "AbCdEf1234567890AbCdEf1234567890Abc="
# ota_password: "UpdatePass456"
